<%- include('../partials/header')%>

<h2><%= title %></h2>
    <% if (user) { %>
        <form id="edit-review" method="POST" action="/reviews/<%= review._id %>?_method=PUT">
            <label>Review:</label>
            <textarea name="content" value="<%= review.content %>"></textarea>
            <label>Rating:</label>
            <select name="rating">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5" selected>5</option>
            </select>
            <input type="submit" value="Add EDIT Review">
        </form>
        <% } %>

<%- include('../partials/footer')%>
