<%- include('../partials/header')%>
<body style="background-color: orange;">
<div id="showpg">
    <tr>
        <td>
            <%= studio.name%>
        </td>
        <td><img src="<%= studio.img%>" alt="failed to display"></td>
        <td>$<%= studio.price%>
            <br>
        </td>
        <td>
            <%= studio.session%>
        </td>
        <br>
        <br>
        <td>
            <%= studio.description %>
        </td>
        <br>
    </div>
        <!-- <td>
            <%= studio.category %>
        </td> -->
      
        <!-- <td>
            <%= studio.user %>
        </td> -->
    </tr>

    <!-- <form action=""></form> -->
    <br><br>
    <h2>Reviews</h2>
    <% if (user) { %>
        <form id="add-review-form" method="POST" action="/studios/<%= studio._id %>/reviews">
            <label>Review:</label>
            <textarea name="content"></textarea>
            <label>Rating:</label>
            <select name="rating">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5" selected>5</option>
            </select>
            <input type="submit" value="Add Review">
        </form>
        <% } %>

            <% if (studio.reviews.length) { %>
                <table>
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Date</th>
                            <th>Review</th>
                            <th>Rating</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let total=0 %>
                            <% studio.reviews.forEach(function(r) { %>
                                <% total +=r.rating %>
                                    <tr>
                                        <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>"
                                                referrerpolicy="no-referrer">
                                            <%= r.userName %>
                                        </td>
                                        <td>
                                            <%= r.createdAt.toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= r.content %>
                                        </td>
                                        <td>
                                            <%= r.rating %>
                                        </td>
                                        <td>
                                            <% if (user?._id.equals(r.user)) { %>
                                                <a href="/reviews/<%= r._id %>/edit">EDIT</a>

                                                <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                                                    <button type="submit">X</button>
                                                </form>
                                                <% } %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <tr>
                                            <td colspan="2"></td>
                                            <td>
                                                <strong>
                                                    <%= (total / studio.reviews.length).toFixed(1) %>
                                                </strong>
                                            </td>
                                        </tr>
                    </tbody>
                </table>
                <% } else { %>
                    <h5>No Reviews Yet</h5>
                    <% } %>
                        <%- include('../partials/footer')%>